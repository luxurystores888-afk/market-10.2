# Privacy-friendly, self-hosted analytics
# FREE and open-source!

# Database
DATABASE_URL=postgres://user:password@localhost:5432/plausible

# Secret for cookies
SECRET_KEY_BASE=your-secret-key-here-generate-with-openssl-rand-hex-64

# Base URL
BASE_URL=https://analytics.yoursite.com

# Admin user
ADMIN_USER_EMAIL=admin@yoursite.com
ADMIN_USER_NAME=Admin
ADMIN_USER_PWD=changeme

# Disable registration (only you can access)
DISABLE_REGISTRATION=true

# Email (optional)
MAILER_EMAIL=analytics@yoursite.com
SMTP_HOST_ADDR=smtp.gmail.com
SMTP_HOST_PORT=587
SMTP_USER_NAME=your-email@gmail.com
SMTP_USER_PWD=your-app-password

# Tracking
ENABLE_EMAIL_VERIFICATION=false
LOG_FAILED_LOGIN_ATTEMPTS=true

