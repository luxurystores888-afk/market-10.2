# ===========================================
# CYBER MART 2077 - ENVIRONMENT CONFIGURATION
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/cybermart2077
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cybermart2077
DB_USER=postgres
DB_PASSWORD=password

# ===========================================
# JWT & SECURITY
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ===========================================
# AI SERVICES
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ===========================================
# PAYMENT GATEWAYS
# ===========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ===========================================
# CRYPTO PAYMENTS
# ===========================================
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret
COINBASE_WEBHOOK_SECRET=your-coinbase-webhook-secret

# ===========================================
# BLOCKCHAIN & WEB3
# ===========================================
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key
PRIVATE_KEY=your-ethereum-private-key-for-transactions

# ===========================================
# EMAIL SERVICES
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@cybermart2077.com
FROM_NAME=Cyber Mart 2077

# ===========================================
# SMS SERVICES
# ===========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# SOCIAL MEDIA APIS
# ===========================================
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
PLAUSIBLE_DOMAIN=yourdomain.com
MATOMO_URL=https://your-matomo-instance.com
MATOMO_SITE_ID=1

# ===========================================
# NOTIFICATIONS
# ===========================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# ===========================================
# CLOUD STORAGE
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cybermart2077-assets

# ===========================================
# DEPLOYMENT
# ===========================================
NODE_ENV=development
PORT=3001
FRONTEND_PORT=5000
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5000

# ===========================================
# VERCEL DEPLOYMENT
# ===========================================
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# ===========================================
# KUBERNETES & DOCKER
# ===========================================
KUBE_CONFIG=your-kube-config-base64-encoded
REGISTRY=your-docker-registry-url
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# ===========================================
# BACKUP & STORAGE
# ===========================================
BACKUP_BUCKET=cybermart2077-backups
BACKUP_SCHEDULE=0 2 * * *

# ===========================================
# RATE LIMITING & SECURITY
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:5000

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AI_FEATURES=true
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_SOCIAL_MEDIA=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# ===========================================
# DEVELOPMENT
# ===========================================
DEBUG=cybermart2077:*
LOG_LEVEL=info
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
