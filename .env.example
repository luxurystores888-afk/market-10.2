# 🚀 CYBER MART 2077 - AUTOMATED SETUP ENVIRONMENT
# Copy this file to .env and fill in your values
# The setup script will automatically create this file for you

# 💾 DATABASE CONFIGURATION (Required)
DATABASE_URL="postgresql://username:password@host:port/database"

# 🔐 SECURITY (Required)
JWT_SECRET="your-super-secure-jwt-secret-key-here-make-it-long-and-random"

# 🤖 AI INTEGRATIONS (Optional - automation works without these)
OPENAI_API_KEY="sk-your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
GEMINI_API_KEY="your-gemini-api-key-here"

# 💳 PAYMENT PROCESSING (Optional)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key-here"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key-here"

# 🌍 SERVER CONFIGURATION
NODE_ENV="development"
PORT="3001"
FRONTEND_PORT="5000"

# 📧 NOTIFICATIONS (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# 🔗 REPLIT SPECIFIC (Auto-configured)
REPL_ID="${REPL_ID}"
REPL_SLUG="${REPL_SLUG}"
REPLIT_DB_URL="${REPLIT_DB_URL}"

# 🔧 DEVELOPMENT URLS
VITE_API_URL="http://localhost:3001"
VITE_APP_URL="http://localhost:5000"